@using MatejCervelinMvcProjekt.Models

@{
    ViewBag.Title = "Drzave";
    List<Drzava> drzave = ViewBag.drzave as List<Drzava>;
}

<div class="header">
    @Html.Partial("_LogoutPartialView")
</div>

<div class="formArea container" id="largeForm">

    <h2>Države</h2>
    <p class="dark_blue">
        @Html.ActionLink("Kreiraj novu državu", "Create", null, new { @class = "btn btn-success" })
    </p>

    <table class="table table-hover">
        <tr>
            <th>
                IDDržava
            </th>
            <th>
                Naziv Države
            </th>
            <th></th>
        </tr>

        @foreach (Drzava drzava in drzave)
        {
            <tr>
                <td>
                    @drzava.IDDrzava
                </td>
                <td>
                    @drzava.Naziv
                </td>
                <td>
                    <p class="btn-group-horizontal">
                        @Html.ActionLink("Pregled gradova", "PregledGradova", "Grad", new { drzavaId = drzava.IDDrzava }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Uredi državu", "Edit", new { idDrzava = drzava.IDDrzava }, new { @class = "btn btn-primary" })
                        @*@Html.ActionLink("Delete", "Delete", new { idDrzava = drzava.IDDrzava }, new { @class = "btn btn-danger" })*@
                    </p>
                </td>
            </tr>
        }

    </table>
</div>